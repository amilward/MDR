package uk.co.mdc.model

import java.sql.Blob

class Document {
	
	String name
	String description
	String contentType
	String fileName
	Blob content
	
    static constraints = {
		name blank: false, nullable: false, size: 2..20
		description blank: false, nullable: false, size: 2..500
		content maxSize: 1024 * 1024 * 2

    }
	
	static mapping = {
		columns {
		 content type:'blob', sqlType: "blob"
		}
	 }
	
}

